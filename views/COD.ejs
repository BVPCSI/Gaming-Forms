                        <div class="form-group">
                            <label>College/School Name:</label>
                            <input id="myclg" class="form-control" type="text"/>
                        </div>
                        <div class="form-group">
                            <label>Mobile Number:</label>
                            <input id="mynum" class="form-control" type="text"/>
                        </div>
                        <div class="form-group">
                            <label>CODM User Name:</label>
                            <input id="myCOD" class="form-control" type="text"/>
                        </div>
                        <div class="form-group">
                            <label>Discord Name:</label>
                            <input id="mydiscord" class="form-control" type="text"/>
                        </div>
                        <button type="submit" class="btn btn-success">Submit</button>
                        </div>
